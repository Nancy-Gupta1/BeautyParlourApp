<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:orientation="vertical"
    tools:context=".AppoinmentActivity">


    <include layout="@layout/custom_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_20dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtAppUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/montserratregular"
                android:hint="@string/username"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="36"
                android:maxLines="1"
                android:minLines="1"
                android:padding="@dimen/dimen_20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/dimen_20sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtAppUserphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_mobile"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/montserratregular"
                android:hint="@string/mobile"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="36"
                android:maxLines="1"
                android:minLines="1"
                android:padding="@dimen/dimen_20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/dimen_20sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtAppUseraddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/montserratregular"
                android:hint="@string/address"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="36"
                android:maxLines="1"
                android:minLines="1"
                android:padding="@dimen/dimen_20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/dimen_20sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_20dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateImg"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:src="@drawable/ic_calender" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/edtAppDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="@string/date"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/dimen_20sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="@dimen/dimen_350dp"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_20dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timeImg"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:src="@drawable/ic_calender" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/edtAppTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="@string/time"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/dimen_20sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="@dimen/dimen_350dp"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAppoinment"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:background="@drawable/button_bag"
                android:padding="@dimen/dimen_20dp"
                android:text="@string/book_an_appoinment"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>