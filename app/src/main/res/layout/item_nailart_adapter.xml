<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relative"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nailArtImage"
        android:layout_width="@dimen/dimen_150dp"
        android:layout_height="@dimen/dimen_150dp"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/ic_services" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nailArtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nailArtImage"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginBottom="28dp"
        android:text="@string/name"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_12sp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtnailArtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_toRightOf="@+id/nailArtImage"
        android:text="title"
        android:textColor="@color/white" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nailArtcrossImage"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_below="@+id/txtnailArtName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:src="@drawable/ic_doble_arrow"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtnailappoint"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nailArtcrossImage"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_toRightOf="@+id/nailArtImage"
        android:text="Beautiful"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_14sp" />


</RelativeLayout>



